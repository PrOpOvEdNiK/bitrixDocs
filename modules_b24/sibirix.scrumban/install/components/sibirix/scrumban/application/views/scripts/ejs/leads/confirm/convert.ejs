        </div>

        <br/>
        <hr/>
        <br/>

        <div class="inputs">
            <label><input type="hidden" value="N" name="convertDeal"><input type="checkbox" name="convertDeal" class="js-deal-toggle" value="Y" /> <?= $this->t('LEAD_CONVERT_DEAL'); ?></label>

                <br/>
                <br/>

            <div class="js-deal-form" style="display: none;">
                <label>
                    <?= $this->t('LEAD_CONVERT_TITLE'); ?>
                    <input type="text" name="dealTitle" class="" value="<%= leadModel.title %>"/>
                </label>
                <br/>
                <br/>
                <label>
                    <?= $this->t('LEAD_CONVERT_DEAL_STAGE'); ?>
                    <select name="dealStageId">
                        <? foreach (Model_Db_Backend_CrmDeal::getStageList() as $id => $title) : ?>
