                <label>
                    <?= $this->t('LEAD_CONVERT_CONTACT_CHOOSE'); ?>
                    <select name="contactContactId">
                        <? foreach (Model_Db_Backend_CrmContact::getRefList() as $contactId => $contactName) : ?>
                            <option value="<?= $contactId; ?>"><?= $contactName; ?></option>
                        <? endforeach; ?>
                    </select>
