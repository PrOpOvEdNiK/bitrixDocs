                    <input type="hidden" name="contactOpened" value="N">
                    <input type="checkbox" name="contactOpened" value="Y" checked>
                </label>
                <br/>
                <br/>
                <label>
                    <?= $this->t('LEAD_CONVERT_EXPORT'); ?>
                    <input type="hidden" name="contactExport" value="N">
                    <input type="checkbox" name="contactExport" value="Y" checked>
                </label>
                <br/>
                <br/>
                <label>
                    <?= $this->t('LEAD_CONVERT_CONTACT_TYPE'); ?>
                    <select name="contactTypeId">
                        <? foreach (Model_Db_Backend_Lead::getContactTypeList() as $id => $title) : ?>
                        <option value="<?= $id; ?>"><?= $title; ?></option>
