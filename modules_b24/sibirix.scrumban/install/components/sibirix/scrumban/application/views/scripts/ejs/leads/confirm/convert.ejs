                    <?= $this->t("LEAD_CONVERT_COMPANY_TITLE"); ?>:
                    <input type="text" name="companyTitle" value="<%= leadModel.title %>"/>
                </label>
            </div>
            <div class="tab js-tab-content" id="convert_company_list" data-scope="company">
                <label>
                    <?= $this->t('LEAD_CONVERT_COMPANY_CHOOSE'); ?>
