                <br/>
                <br/>
                <label>
                    <?= $this->t('LEAD_CONVERT_ACCESS'); ?>
                    <input type="hidden" name="dealOpened" value="N">
                    <input type="checkbox" name="dealOpened" value="Y" checked>
